/* pages/index/index.wxss */
page{
  background-color: white;
  padding: 0;
}
.container{
  padding: 0;
}
.header {
  display: flex;
  width: 100%;
  height: 270rpx;
  background-color: #652c7d;
  border-radius: 0  0  0 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header .name{
  flex: 1;
  color: #ffcc33;
}
.name {
  padding-left: 50rpx;
  padding-top: 90rpx;
}
.name-data{
  font-size: 60rpx;
  font-weight: bold;
}
.avatar {
  overflow: hidden;
  text-align: right;
  margin-right: 80rpx;
  margin-top: 80rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius:50%;
}
.avatar-data {
  display: inline-block;
  height: 100%;
  width: 100%;
}
.list{
  box-sizing: border-box;
  width: 100%;
  background-color:rgba(0,0,0,0);
  padding: 0 45rpx;
  margin-top: 100rpx;
}
.list .arrow{
  box-sizing: border-box;
  width: 100%;
  height: 120rpx;
  margin-bottom: 40rpx;
  padding-left: 30rpx;
  line-height: 120rpx;
  border-radius: 30rpx;
  /* box-shadow: 0 0 3px 1px rgba(7, 17, 27, 0.1); */
  background-color:rgba(101, 44, 125, 1);
  color: #ffcc33;
}
.arrow:after{
 top: 50rpx;
 color: #ffcc33;
}
.arrow .img {
  display: inline-block;
  vertical-align: top;
  width: 64rpx;
  height: 64rpx;
  margin-top: 28rpx;
  margin-right: 20rpx;
}
.logout{
  width: 670rpx;
  padding-top: 32rpx;
}
.logout button{
  color: #652c7d;
  background-color: #ffcc33;
}

.toLogin{
  font-size: 60rpx;
}

.toLogin .arrow {
  height: 60rpx;
  width: 60rpx;
  vertical-align: top;
  margin-top: 14rpx;
}

.toLogin .arrow::after {
  display: none;
}

.background{
  width: 100%;
  height: 100%;
  position: absolute; 
  background-size:100% 100%;
  left: 0px;
  top: 50px;
  z-index: -1;
  opacity: 0.3;
}

